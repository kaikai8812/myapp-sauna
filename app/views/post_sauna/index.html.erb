<h1>投稿一覧画面</h1>
<table>
  <thead>
    <tr>
      <th>サウナ名</th>
      <th>サウナ画像</th>
      <th>場所</th>
    </tr>
  </thead>
  <tbody>
    <% @post_saunas.each do |post_sauna|%>
    <tr>
      <td>
        <%= link_to post_sauna_path(post_sauna.id) do %>
        <%= post_sauna.sauna_name %>
        <%end%>
      </td>
      <td>
        <%= link_to post_sauna_path(post_sauna.id) do %>
        <%= attachment_image_tag post_sauna, :sauna_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg"  %>
        <%end%>
      </td>
      <td><%= post_sauna.prefecture %></td>
    </tr>
    <% end %>
  </tbody>
</table>